import shelve
def demo3():
    # 用shelve模块保存变量
    # 创建一个mydata.db文件
    shelfFile = shelve.open('mydata')
    cats = ['Zophie','Pooka','Simon']
    shelfFile['cats'] = cats
    shelfFile.close()


